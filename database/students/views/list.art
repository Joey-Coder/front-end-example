<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>学员信息</title>
    <link rel="stylesheet" href="/css/list.css" />
  </head>
  <body>
    <table>
      <caption>
        学员信息
        <a href="/add">添加学生</a>
      </caption>
      <tr>
        <th>姓名</th>
        <th>年龄</th>
        <th>性别</th>
        <th>邮箱地址</th>
        <th>爱好</th>
        <th>所属学院</th>
        <th>入学时间</th>
        <th>操作</th>
      </tr>
      {{each students}}
      <tr>
        <th>{{ $value.name }}</th>
        <th>{{ $value.age }}</th>
        <th>{{ $value.sex == "male" ? "男" : "女" }}</th>
        <th>{{ $value.email }}</th>
        <th>
          {{ each $value.hobbies }}
          <span>{{ $value }} </span>
          {{/each}}
        </th>
        <th>{{ $value.collage }}</th>
		<th>{{ dateFormat($value.enterDate, "yyyy-mm-dd") }}</th>
		<th>
          <a href="/delete?id={{ $value._id }}">删除</a>
        </th>
      </tr>
      {{/each}}
    </table>
  </body>
</html>
